root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.php]
max_line_length = 120

[*.{html,js,vue,css,less,scss,blade.php}]
indent_size = 2
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
